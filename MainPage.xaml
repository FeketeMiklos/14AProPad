<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProPad.MainPage"
             Title="Propad"
             BackgroundColor="Black"
             >
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="settings.png" StyleId="Settings"/>
    </ContentPage.ToolbarItems>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="0">
            <Grid x:Name="grid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>
            </Grid>
        </ScrollView>

        <StackLayout VerticalOptions="End">
            <ImageButton Source="add.png" Margin="15,15,25,15" WidthRequest="65" HeightRequest="65" HorizontalOptions="End" Clicked="newEditor_Clicked"/>
        </StackLayout>
        
    </Grid>


</ContentPage>
